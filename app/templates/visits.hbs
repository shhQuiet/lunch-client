<div class="well">
	<h1>visits</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Number in party</th>
				<th>Place</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each}}
			<tr>
				<td>{{date}}</td>
				<td>{{dinerCount}}</td>
				<td>{{place.name}}</td>
				<td>
					<button class="btn btn-default" {{action editPlace this}}>edit</button>
					<button class="btn btn-default" {{action deletePlace this}}>delete</button>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
	{{outlet}}
</div>